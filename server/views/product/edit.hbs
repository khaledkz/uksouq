<form method="post">
    <div class="form-group has-success">

        <label for="example-text-input text-success" class="col-12 col-form-label ">
            <h3 class="text-danger ml-4">Edit Product</h3>
        </label>

          <label for="example-text-input text-success " class="col-12 col-form-label">
            <h4 class="text-primary pl-2">Title:</h4>
          </label>

        <div class="col-lg-6 col-md-8 col-sm-9 col-xs-9 ">
            <input placeholder="item title" class="form-control" type="text" name="title" id="example-text-input" value="{{data.title}}">
        </div>

         <label for="example-text-input text-success " class="col-12 col-form-label">
            <h4 class="text-primary pl-2">Price:</h4>
        </label>

        <div class="col-lg-6 col-md-8 col-sm-9 col-xs-9 ">
            <input placeholder="item price" class="form-control" type="number" name="price" id="example-text-input" value="{{data.price}}">
        </div>

        <div class="col-lg-6 col-md-8 col-sm-9 col-xs-9 mt-3 ">
          <input class="btn btn-success btn-lg" type="submit" value="Submit">
        </div>

    </div>
</form>